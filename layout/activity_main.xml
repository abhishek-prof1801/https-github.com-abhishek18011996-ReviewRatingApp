<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:background='#00cdcd'
    tools:context="com.example.monty.reviewratingapp.MainActivity">
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select the web"
        android:textSize="40dp"
        android:background="#ff7256"
        android:textColor='#fbf5f5'
        android:layout_marginBottom="30dp"
        android:textAlignment="center"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="30dp">
   <ImageView
      android:id="@+id/chimp_mail"
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1"
       android:focusable="true"
       android:src="@drawable/mail_chimp"
       android:clickable="true"
     />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mail Chimp"
            android:textSize="20dp"
            android:textColor='#fbf5f5'/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1"
        android:layout_marginBottom="30dp">
        <ImageView
            android:id="@+id/poet_mail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:src="@drawable/mail_poet"

            />
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mail Poet"
            android:textSize="20dp"
            android:textColor='#fbf5f5'/>
    </LinearLayout>


</LinearLayout>
